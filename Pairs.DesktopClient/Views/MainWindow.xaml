            <Label Content="Message: "/>
            <Label x:Name="Message" Content="x"/>
            <Button x:Name="NewGameButton" Content="New Game" Margin="5" Click="NewGameButton_Click"/>
        </StackPanel>

        <Border Grid.Row="1" Padding="5">

